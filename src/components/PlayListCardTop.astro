---
import type { Playlist } from '../lib/data'
import { PlayButton } from './PlayButton.jsx'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, color } = playlist
---

<article class="group relative rounded-md bg-zinc-800 hover:bg-zinc-600 shadow-lg 
hover:shadow-xl transition-all duration-500 overflow-hidden z-[99999]">
  <div
    class="absolute right-2 bottom-2 transition-all duration-200 opacity-0 rounded-full shadow-xl
    group-hover:opacity-100 z-10"
  >
    <PlayButton id={id} client:visible/>
  </div>
  <a
    href={`/playlist/${id}`}
    class="playlist-item group transition-all duration-300 relative flex item-center gap-5 rounded-md"
    transition:name=`playlist ${id} box`
    data-color={color.dark}
  >
    <picture class="w-16 h-16 flex-none">
      <img
        src={cover}
        alt={`Cover for ${title}`}
        class="w-full h-full object-cover"
        transition:name=`playlist ${id} image`
      />
    </picture>
    <div class="flex flex-auto items-center px-2">
      <h4
        class="font-semibold text-white text-lg"
        transition:name=`playlist ${id} title`
      >
        {title}
      </h4>
    </div>
  </a>
</article>
